    <widget class="Bananacode\Kip\Block\Widget\Tile" id="kip_tile">
        <label>Kip Tile</label>
        <description>Inspirations</description>
        <parameters>
            <parameter name="title" xsi:type="text" required="true" visible="true" sort_order="3">
                <label>Title</label>
            </parameter>
            <parameter name="image" xsi:type="block" required="true" visible="true" sort_order="0">
