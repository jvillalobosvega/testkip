                    <a href="<?= $child->getUrl() ?>" class="category">
                        <div class="img">
                            <img class="lazy-load-img" data-src="<?= $data['media'] . str_replace('/media/','', $child->getIcon()) ?>" alt="<?= $child->getName() ?>">
                        </div>
                        <span><?= $child->getName() ?></span>
                    </a>
                <?php endforeach; ?>
            </div>
        <?php endforeach; ?>
    </div>
